{
  "version": 6,
  "configurePresets": [
    {
      "name": "ninja",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "FLEXIC_ENABLE_TESTS": true
      }
    },
    {
      "name": "ninja-cxx",
      "inherits": "ninja",
      "cacheVariables": {
        "FLEXIC_COMPILE_AS_CXX": true
      }
    },
    {
      "name": "msvc2022",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "cacheVariables": {
        "FLEXIC_ENABLE_TESTS": true
      }
    },
    {
      "name": "llvm-cov",
      "inherits": "ninja-cxx",
      "environment": {
        "CC": "clang",
        "CXX": "clang++"
      },
      "cacheVariables": {
        "FLEXIC_ENABLE_TEST_COVERAGE": true
      }
    },
    {
      "name": "perf",
      "inherits": "ninja-cxx",
      "environment": {
        "CC": "clang",
        "CXX": "clang++"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "FLEXIC_ENABLE_TESTS": false,
        "FLEXIC_ENABLE_BENCHES": true
      }
    },
    {
      "name": "arm-none-eabi",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-${presetName}",
      "toolchainFile": "cmake/arm-none-eabi.cmake",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "MinSizeRel",
        "FLEXIC_FEATURE_PARSER": false,
        "FLEXIC_FEATURE_JSON": false
      }
    }
  ],
  "buildPresets": [
    {
      "name": "llvm-cov",
      "configurePreset": "llvm-cov",
      "targets": "flexic_test_cov"
    },
    {
      "name": "perf",
      "configurePreset": "perf",
      "targets": "flexic_perf"
    }
  ],
  "workflowPresets": [
    {
      "name": "llvm-cov",
      "steps": [
        {
          "type": "configure",
          "name": "llvm-cov"
        },
        {
          "type": "build",
          "name": "llvm-cov"
        }
      ]
    },
    {
      "name": "perf",
      "steps": [
        {
          "type": "configure",
          "name": "perf"
        },
        {
          "type": "build",
          "name": "perf"
        }
      ]
    }
  ]
}
